/* pages/editor/editor.wxss */

page {
  background: black;
}

.movable-area {
  height: 300%;
  width: 300%;
  margin-left: -100%;
  margin-top: -100%;
}

movable-view.frame {
  border: 0 solid black;
  z-index: 2;
  height: 100%;
  width: 100%;
  background: transparent;
  pointer-events: none;
  box-sizing: border-box;
}

movable-view image {
  height: 100%;
  width: 100%;
}

.bar {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
  color: #fff;
}

.bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  max-width: 100%;
}

#panel {
  position: absolute;
  width: 100%;
  bottom: 0;
  background-color: black;
  z-index: 3;
}

.panel {
  bottom: 0;
  z-index: 100;
  width: 100%;
  background-color: var(--black);
}

.panel-title {
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.panel-title > .content {
  flex: 1;
  text-align: center;
}

/* 取色器 */

.color-picker {
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: top;
  border-radius: 10rpx;
  margin: 0 30rpx 30rpx;
}

.color {
  width: 50rpx;
  height: 100rpx;
  display: inline-block;
  vertical-align: top;
}
