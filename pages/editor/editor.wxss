}

movable-view.meterial {
  border: 1px solid transparent;
  box-sizing: border-box;
}
movable-view.meterial.current {
  border-color: white;
}
movable-view.meterial.current > .iconfont {
  display: block;
}
movable-view.meterial > .iconfont {
  display: none;
  position: absolute;
  font-size: 18px;
  padding: 6px;
  overflow: hidden;
  border-radius: 50%;
}
movable-view.meterial > .iconfont.icon-close {
  background-color: red;
  color: white;
  left: -15px;
  top: -15px;
}
movable-view.meterial > .iconfont.icon-scale {
  background-color: white;
  color: var(--black);
  right: -15px;
  bottom: -15px;
}

.frame {
  position: fixed;
  z-index: 2;
  background-color: transparent;
  pointer-events: none;
  box-sizing: border-box;
  border: solid white;
  
  left:0;
  top:0;
  right: 0;
  height: 0;
}

.frame-before, .frame-after {
  /* opacity: 0.1; */
  background-color: black;
  position: absolute;
  width: 750rpx;
}

movable-view image {
  height: 100%;
  width: 100%;
}

#panel {
  position: absolute;
  width: 100%;
  bottom: 0;
  background-color: black;
  z-index: 3;
}

.nav .image-item {
  transform: scale(0.6);
}

.images-scroll {
  height: 150rpx;
}

images-scroll .cu-list.grid.no-border>.cu-item {
  padding: 0;
}

.image-item {
  height: 90rpx;
  width: 64rpx;
}

/* 取色器 */

.color-picker {
  display: inline-block;
  white-space: nowrap;
}

.color {
  width: 50rpx;
  height: 100rpx;
  display: inline-block;
  vertical-align: middle;
}
